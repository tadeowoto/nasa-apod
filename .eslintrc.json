{
    "extends": ["standard", "plugin:react/recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "rules": {
      // Aquí puedes añadir reglas personalizadas si lo necesitas
    },
    "ignorePatterns": ["*.css"],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  